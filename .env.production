# =============================================
# MEDICHAIN PRODUCTION ENVIRONMENT
# =============================================

# Application Configuration
NODE_ENV=production
APP_NAME=MediChain
APP_VERSION=1.0.0
APP_DESCRIPTION="Decentralized Health Records on Hedera"

# Server Configuration
PORT=3001
HOST=0.0.0.0
CLUSTER_MODE=true
WORKER_COUNT=4

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://medichain_prod:${DB_PASSWORD}@prod-db-cluster.medichain.com:5432/medichain_prod
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_TIMEOUT=30000
DB_IDLE_TIMEOUT=30000

# Redis Configuration
REDIS_URL=redis://${REDIS_PASSWORD}@redis-cluster.medichain.com:6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_TLS=true

# JWT Configuration
JWT_SECRET=${JWT_SECRET_PRODUCTION}
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET_PRODUCTION}
JWT_REFRESH_EXPIRES_IN=7d

# Hedera Configuration (Production Mainnet)
HEDERA_OPERATOR_ID=0.0.${HEDERA_OPERATOR_ID}
HEDERA_OPERATOR_KEY=${HEDERA_OPERATOR_PRIVATE_KEY}
HEDERA_NETWORK=mainnet
HEDERA_MAX_TRANSACTION_FEE=2
HEDERA_MAX_QUERY_PAYMENT=1

# HCS Topics (Production)
HEDERA_AUDIT_TOPIC=0.0.${AUDIT_TOPIC_ID}
HEDERA_RECORD_TOPIC=0.0.${RECORD_TOPIC_ID}
HEDERA_CONSENT_TOPIC=0.0.${CONSENT_TOPIC_ID}
HEDERA_EMERGENCY_TOPIC=0.0.${EMERGENCY_TOPIC_ID}

# Smart Contract Addresses (Production)
HEALTH_RECORD_CONTRACT=0.0.${HEALTH_RECORD_CONTRACT_ID}
DOCTOR_REGISTRY_CONTRACT=0.0.${DOCTOR_REGISTRY_CONTRACT_ID}
ACCESS_CONTROL_CONTRACT=0.0.${ACCESS_CONTROL_CONTRACT_ID}

# IPFS Configuration (Production)
IPFS_PROVIDER=pinata
PINATA_API_KEY=${PINATA_API_KEY_PRODUCTION}
PINATA_SECRET_API_KEY=${PINATA_SECRET_KEY_PRODUCTION}
PINATA_JWT=${PINATA_JWT_PRODUCTION}
WEB3_STORAGE_TOKEN=${WEB3_STORAGE_TOKEN_PRODUCTION}
IPFS_GATEWAY=https://medichain.ipfs.gateway.com

# Email Service (Production - SendGrid)
SMTP_PROVIDER=sendgrid
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=${SENDGRID_API_KEY}
SMTP_FROM=medichain@medichain.com
SMTP_FROM_NAME=MediChain

# Application URLs
API_URL=https://api.medichain.com
FRONTEND_URL=https://medichain.com
CORS_ORIGIN=https://medichain.com,https://www.medichain.com

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_UPLOAD_MAX=20

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=${SESSION_SECRET_PRODUCTION}
ENCRYPTION_KEY=${ENCRYPTION_KEY_PRODUCTION}
CSP_ENABLED=true
HSTS_ENABLED=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/medichain/app.log
LOG_ERROR_FILE=/var/log/medichain/error.log
LOG_ACCESS_FILE=/var/log/medichain/access.log

# Monitoring & Observability
PROMETHEUS_METRICS=true
HEALTH_CHECK_ENABLED=true
REQUEST_LOGGING=true
PERFORMANCE_MONITORING=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=${BACKUP_ENCRYPTION_KEY}

# Alerting Configuration
ALERT_WEBHOOK_URL=${ALERT_SLACK_WEBHOOK}
ALERT_EMAIL=${ALERT_EMAIL}
ALERT_PHONE=${ALERT_PHONE}

# Performance Configuration
COMPRESSION_ENABLED=true
CACHE_ENABLED=true
CACHE_TTL=3600
QUERY_TIMEOUT=30000
UPLOAD_LIMIT=10mb

# Feature Flags
FEATURE_EMERGENCY_ACCESS=true
FEATURE_QR_CODES=true
FEATURE_OFFLINE_MODE=true
FEATURE_PUSH_NOTIFICATIONS=true
FEATURE_AUDIT_LOGGING=true

# Third-Party Integrations
SENTRY_DSN=${SENTRY_DSN_PRODUCTION}
NEW_RELIC_LICENSE_KEY=${NEW_RELIC_LICENSE_KEY}
DATADOG_API_KEY=${DATADOG_API_KEY}

# Compliance & Legal
COMPLIANCE_MODE=hipaa
DATA_RETENTION_DAYS=2555
PRIVACY_MODE=strict

# Backup Encryption
BACKUP_PGP_PUBLIC_KEY=${BACKUP_PGP_PUBLIC_KEY}
BACKUP_PGP_PRIVATE_KEY=${BACKUP_PGP_PRIVATE_KEY}